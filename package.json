{
  "name": "ezspeak",
  "version": "1.0.2",
  "description": "Voice-to-text transcription with global hotkey activation",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "npm run download-model && electron-builder",
    "download-model": "node scripts/download-model.js"
  },
  "keywords": [
    "voice",
    "transcription",
    "whisper",
    "hotkey"
  ],
  "author": "Arman Mahjoor",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "@nut-tree-fork/nut-js": "^4.2.6",
    "axios": "^1.6.0",
    "electron-store": "^8.1.0",
    "ffmpeg-static": "^5.2.0",
    "form-data": "^4.0.0",
    "uiohook-napi": "^1.5.4"
  },
  "build": {
    "appId": "com.ezspeak.app",
    "productName": "ezspeak",
    "forceCodeSigning": false,
    "files": [
      "**/*",
      "!whisper-bin/**/*"
    ],
    "extraResources": [
      {
        "from": "whisper-bin",
        "to": "whisper-bin",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "whisper-models",
        "to": "whisper-models",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico",
      "publisherName": "Arman Mahjoor"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.svg",
      "category": "public.app-category.productivity"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
